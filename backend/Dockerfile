# Build stage
FROM golang:1.23-alpine AS builder

WORKDIR /app
COPY go.mod ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server ./cmd/server

# Runtime stage
FROM alpine:3.20

WORKDIR /app
COPY --from=builder /app/server /app/server

ENV PORT=8080

EXPOSE 8080
CMD ["/app/server"]
